package ci.region

def bunchOfScripts
def scriptWithPipeline

pipeline {
  agent any

  stages {
    stage('Build') {
      steps {
        echo 'Building..'
        script {
          bunchOfScripts = load "ci/src/main/groovy/script/BunchOfScripts.groovy"
          scriptWithPipeline = load "ci/src/main/groovy/ci/region/ScriptWithPipeline.groovy"
        }
      }
    }
    stage('Test') {
      steps {
        echo 'Testing..'
        script {
          //echo bunchOfScripts.getProperty('FirstClass').a() не разрешено
          scriptWithPipeline(10)
        }
      }
    }
  }
}