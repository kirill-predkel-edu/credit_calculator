package ci.region

def module

pipeline {
  agent any

  stages {
    stage('Build') {
      steps {
        echo 'Building..'
        script {
          module = load "ci/src/main/groovy/script/BunchOfScripts.groovy"
        }
      }
    }
    stage('Test') {
      steps {
        echo 'Testing..'
        script {
          echo module..getProperty('FirstClass').a()
        }
      }
    }
  }
}